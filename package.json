{
  "name": "dromos",
  "description": "A simple app for automating desktop command sequences.",
  "version": "0.1.0",
  "private": true,
  "main": "build/main.js",
  "homepage": ".",
  "dependencies": {
    "@craco/craco": "^5.9.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^27.0.2",
    "@types/jquery": "^3.5.6",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.27",
    "@types/react-dom": "^17.0.9",
    "clone": "^2.1.2",
    "electron-store": "^8.0.1",
    "jquery": "^3.6.0",
    "moment": "^2.29.1",
    "react": "^16.9.0",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-scripts": "^3.4.4",
    "react-useanimations": "^2.0.6",
    "robotjs": "^0.6.0",
    "typescript": "^4.4.3",
    "uuid-random": "^1.3.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "rebuild": "npm rebuild --runtime=electron --target=15.1.2 --disturl=https://atom.io/download/atom-shell --abi=48",
    "electron:dev": "electron . --env=dev",
    "electron:prod": "electron . --env=prod",
    "craco:start" : "craco start",
    "craco:build": "craco build",
    "format": "prettier --write ./src",
    "start": "npm run craco:start & npm run electron:dev",
    "build": "npm run rebuild && npm run craco:build",
    "dist": "npm run build && electron-builder -w",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.dromos.app",
    "productName": "Dromos",
    "asar": true,
    "extends": null,
    "directories": {
      "app": ".",
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "package.json",
      "build/**/*",
      "node_modules"
    ],
    "win": {
      "target": "nsis",
      "icon": "/build/logo512.png"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.8.8",
    "electron": "^15.1.2",
    "electron-builder": "^22.13.1",
    "postcss": "^7.0.39",
    "prettier": "2.4.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.2.16"
  }
}
